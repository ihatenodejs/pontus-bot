services:
  bot:
    build: .
    ports:
      - "3000:3000"
    environment:
      - BOT_TOKEN=${BOT_TOKEN}
    volumes:
      - .:/app
      - ./node_modules:/app/node_modules
      - ./bot.log:/app/bot.log
      - ./files.json:/app/files.json
    command: ["node", "bot.js"]
    restart: unless-stopped